{
  "name": "mt-tacoshop",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^5",
    "@sap/xsenv": "^3.1.1",
    "@sap/xssec": "^3.2.12",
    "body-parser": "^1.19.1",
    "cds-pg": "^0.1.21",
    "cfenv": "^1.2.4",
    "express": "^4",
    "passport": "^0.5.2"
  },
  "devDependencies": {
    "sqlite3": "^5.0.2"
  },
  "scripts": {
    "start": "node srv/server.js",
    "deploy:sqlite": "cds deploy -2 sqlite::db:"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "database": ":db:"
        }
      }
    },
    "features": {
      "in_memory_db": true
    }
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  }
}